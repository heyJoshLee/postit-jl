<% header = link_to("All Posts ", posts_path) + "&raquo; #{@category.name}".html_safe %>
<%= render "shared/title_header", title: header %>

<%= render "shared/sort_bar", path: category_path(@category) %>


<% if @posts.length > 0 %>
  <%= render @posts %>
<% else %>

<div class="row">
  <div class="well span8">
    <p>Sorry there are no more posts.</p>
  </div>
</div>

<% end %>

<%= render "shared/pagination", href: "/categories/#{@category.slug}" %>