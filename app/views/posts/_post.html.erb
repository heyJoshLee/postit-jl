<div class="row">
  <div class="well span0">

    <% if logged_in? %> 
      <%= link_to vote_post_path(post, vote: true), method: "post", remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    <% end %>

  <p class="text-center">
    <span id="post_<%=post.id%>_votes"><%= post.total_votes %></span>
  </p>
    
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: "post", remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
</div>


  <div class="span8 well">
    <%= render post.categories %>
    <h4> <%= link_to post.title, format_url(post.url) %> </h4>
    <p><%= post.body %></p>
    <p>
      <span class="quiet">posted by</span>

     <%= render "users/link_to_profile", obj: post %>

      <small>at <%= format_datetime(post.created_at) %> </small>
    </p>
  <small>
    <span>
      <%= link_to("#{post.comments.size} comments", post_path(post)) %>
    </span>
  </small>

  <% if logged_in? &&  can_delete?(post)%>
    <br />
      <%= link_to post_path(post), method: "DELETE", data: {confirm: "Are you sure you want to delete this post"} do %>
        <div class="btn btn-danger">Delete</div>
      <% end %>
  <% end %>

  </div>
</div>