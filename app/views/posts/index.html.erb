<%= render "shared/title_header", title: "All posts" %>

<%= form_tag("/posts", method: "GET") do %>
  Sort by <span> Dropdown </span>
  <%= submit_tag "Search", class: "btn btn-primary btn-xs" %>
<% end %>

<% if @posts.length > 0 %>
  <%= render @posts %>
<% else %>

<div class="row">
  <div class="well span8">
    <p>Sorry there are no more posts.</p>
  </div>
</div>

<% end %>

<%= render "shared/pagination", href: "/" %>